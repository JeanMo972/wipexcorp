{% extends 'base.html.twig' %}

{% block title %}Nos produits - AUTOBOOST{% endblock %}

{% block content %}             {# Création d'une section filtre dans la page produit #}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{form(form)}}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h3>
                <div class="row product-container">
{% for product in products %}
    <div class="col-md-3">
        <div class="product-item text-center">
            <a href="{{ path('app_product', {'slug' : product.slug}) }}"> {#route vers la page produit #}
                <img src="/uploads/{{product.illustration}}" alt="{{product.name}}"class="img-fluid"></a> {# lien vers le dossier image #}
                <h5>{{product.name}}</h5>
                <span class="product-subtitle">{{product.subtitle}}</span>
                <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.')}} €</span>
        </div>
    </div>
{% endfor %}
        </div>
    </div>
</div>
{% endblock %}

     

    

